<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- activity -->
        <item name="android:windowIsTranslucent">true</item>
        <!--空出状态栏-->
        <item name="android:windowTranslucentStatus">true</item>
        <!--空出底部栏-->
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:configChanges">orientation|keyboardHidden</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden|adjustResize</item>

        <!--<item name="android:fitsSystemWindows">true</item>-->
        <!--<item name="android:clipToPadding">true</item>-->
        <!--标题栏-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="SwipeBackLayout">
        <item name="edge_size">@dimen/dp_50</item>
        <item name="shadow_left">@mipmap/shadow_left</item>
        <item name="shadow_right">@mipmap/shadow_right</item>
        <item name="shadow_bottom">@mipmap/shadow_bottom</item>
    </style>

    <style name="ActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dp_30</item>
        <item name="android:minWidth">@dimen/dp_55</item>
        <item name="android:paddingLeft">@dimen/dp_4</item>
        <item name="android:paddingRight">@dimen/dp_4</item>
        <item name="android:background">@drawable/button_selected</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>
</resources>
